rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Simplification : On autorise l'accès direct aux avatars si on est le propriétaire
    // sans passer par une vérification complexe Firestore pour l'instant.
    
    match /ecoles/{schoolId}/parents/{parentId}/avatars/{allPaths=**} {
       allow read: if true;
       allow write: if isSignedIn() && request.auth.uid == parentId;
    }
    
    match /ecoles/{schoolId}/staff/{staffId}/avatars/{allPaths=**} {
       allow read: if true;
       allow write: if isSignedIn() && request.auth.uid == staffId;
    }
    
    match /ecoles/{schoolId}/eleves/{studentId}/avatars/{allPaths=**} {
       allow read: if true;
       allow write: if isSignedIn(); // À restreindre plus tard
    }

    // Règles génériques pour le reste
    match /Images/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    match /ecoles/{schoolId}/logos/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    match /temp-logos/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
