
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getUserSchoolId(userId) {
      return get(/databases/$(database)/documents/utilisateurs/$(userId)).data.schoolId;
    }

    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function getUserRole(schoolId, userId) {
        return get(/databases/$(database)/documents/ecoles/$(schoolId)/utilisateurs/$(userId)).data.role;
    }
    
    function isSchoolDirector(schoolId, userId) {
      return isUserInSchool(schoolId) && getUserRole(schoolId, userId) == 'directeur';
    }

    function isCreatingOwnDocument(userId) {
      return request.auth.uid == userId;
    }

    // --- Root Collections ---

    match /utilisateurs/{userId} {
      allow create: if isUserAuthenticated() && isCreatingOwnDocument(userId) && !exists(/databases/$(database)/documents/utilisateurs/$(userId));
      allow get: if isUserAuthenticated() && isCreatingOwnDocument(userId);
      allow update, delete, list: if false;
    }
    
    match /ecoles/{schoolId} {
        allow create: if isUserAuthenticated() && request.resource.data.directorId == request.auth.uid;
        allow get: if isUserInSchool(schoolId);
        allow list: if isUserAuthenticated();
        allow update: if isSchoolDirector(schoolId, request.auth.uid);
        allow delete: if false;

        // --- Subcollections within a School ---

        match /utilisateurs/{userId} {
            allow create, update: if isUserInSchool(schoolId) && (isCreatingOwnDocument(userId) || isSchoolDirector(schoolId, request.auth.uid));
            allow read, list: if isUserInSchool(schoolId);
            allow delete: if false;
        }

        match /eleves/{studentId} {
          allow read, list: if isUserInSchool(schoolId);
          // Allow any authenticated user of the school to update student info (e.g., for tuition payments)
          allow write: if isUserInSchool(schoolId);

          match /notes/{gradeId} {
              allow read, write: if isUserInSchool(schoolId);
          }
          
          match /paiements/{paymentId} {
              // Allow any member of the school to read and create payment history entries.
              // This is crucial for recording tuition and viewing history.
              allow read, list, create: if isUserInSchool(schoolId);
              // Only directors should be able to alter or delete payment history.
              allow update, delete: if isSchoolDirector(schoolId, request.auth.uid);
          }
        }
        
        match /comptabilite/{transactionId} {
            // Allow any school member to create transactions (like tuition payments), but only directors can modify/delete them.
            allow read, list, create: if isUserInSchool(schoolId);
            allow update, delete: if isSchoolDirector(schoolId, request.auth.uid);
        }
        
        // Generic rules for other subcollections.
        // Director can write, members can read.
        match /{otherCollections}/{docId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid);
        }
    }
  }
}
