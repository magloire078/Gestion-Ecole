rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // RÈGLES TEMPORAIRES POUR LE DÉVELOPPEMENT
    // PERMET TOUT AUX UTILISATEURS AUTHENTIFIÉS
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Exception : contact_requests peut être créé par n'importe qui
    match /contact_requests/{requestId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
    
    // Exception : survey_responses peut être créé par n'importe qui
    match /survey_responses/{responseId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
  }
}
