// Règle de sécurité renforcée (Phase 1)
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Pour l'instant, aucun utilisateur n'est admin. 
      // Cette fonction est prête pour une utilisation future.
      return request.auth.token.admin == true;
    }

    // --- Global Collections ---
    
    // Règle sécurisée pour la collection des utilisateurs
    match /utilisateurs/{userId} {
      allow get, update: if isAuth() && request.auth.uid == userId;
      allow create: if isAuth() && request.auth.uid == userId && !exists(/databases/$(database)/documents/utilisateurs/$(userId));
      allow list, delete: if false; // Désactiver la liste et la suppression
    }

    // Admins can manage roles.
    match /admin_roles/{roleId} {
      allow read, write: if isAdmin();
    }
    
    // --- School Collections ---
    
    // Accès plus permissif pour le développement, mais avec suppression contrôlée.
    // Cette règle permet à tout utilisateur authentifié de lire et écrire, 
    // ce qui facilite le développement, mais empêche les suppressions accidentelles.
    match /ecoles/{schoolId}/{allPaths=**} {
       allow read, create, update: if isAuth();
       // Seul un admin (futur rôle) pourra supprimer des données critiques.
       allow delete: if isAdmin();
    }
  }
}
