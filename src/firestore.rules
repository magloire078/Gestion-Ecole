
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Custom claim 'admin' is set on the user's token via a Cloud Function
      return request.auth.token.admin == true;
    }

    // It's more secure and performant to get schoolId from the token
    function getUserSchoolId() {
      return request.auth.token.schoolId;
    }
    
    function isUserInSchool(schoolId) {
      return isAuth() && getUserSchoolId() == schoolId;
    }
    
    // For read/update operations on existing documents
    function isSchoolDirector(schoolId) {
       let schoolDoc = get(/databases/$(database)/documents/ecoles/$(schoolId));
       return isAuth() && schoolDoc.data.directorId == request.auth.uid;
    }
    
    function getStaffRole(userId, schoolId) {
      let staffDocPath = /databases/$(database)/documents/ecoles/$(schoolId)/personnel/$(userId);
      if (exists(staffDocPath)) {
        return get(staffDocPath).data.role;
      }
      return null;
    }
    
    function isTeacher(schoolId) {
        return getStaffRole(request.auth.uid, schoolId) == 'enseignant';
    }

    function isTeacherForClass(classId, schoolId) {
      if (classId == null || classId == "") {
        return false;
      }
      let classDoc = get(/databases/$(database)/documents/ecoles/$(schoolId)/classes/$(classId));
      let isMainTeacher = classDoc.data.mainTeacherId == request.auth.uid;
      let isAssignedTeacher = request.auth.uid in (classDoc.data.teacherIds || []);
      return isMainTeacher || isAssignedTeacher;
    }
    
    function canTeacherAccessStudent(studentId, schoolId) {
        if (!isTeacher(schoolId)) return false;
        let student = get(/databases/$(database)/documents/ecoles/$(schoolId)/eleves/$(studentId));
        return isTeacherForClass(student.data.classId, schoolId);
    }
    
    function getClassIdForAbsence() {
      if (request.resource != null) {
        return request.resource.data.classId;
      }
      return resource.data.classId;
    }

    // --- Global Collections ---
    match /utilisateurs/{userId} {
      allow read: if isAuth() && (request.auth.uid == userId || isAdmin());
      // A user can create their own root doc, but not overwrite it.
      allow create: if isAuth() && request.auth.uid == userId && !exists(path);
      allow update: if isAuth() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    match /admin_roles/{roleId} {
      allow read, write: if isAdmin();
    }

    // --- School-based Collections ---
    match /ecoles/{schoolId} {
      allow read: if isUserInSchool(schoolId) || isAdmin();
      // On create, user must set themselves as director
      allow create: if isAuth() && request.resource.data.directorId == request.auth.uid;
      // On update, user must be the existing director
      allow update: if isSchoolDirector(schoolId) || isAdmin();
      allow delete: if isAdmin();

      // --- Staff Subcollection ---
      match /personnel/{staffId} {
        allow read, list: if isUserInSchool(schoolId);
        // Director can add staff. A user can create their own profile when joining.
        allow create: if (isAuth() && request.auth.uid == staffId) || isSchoolDirector(schoolId) || isAdmin();
        allow update, delete: if isSchoolDirector(schoolId) || isAdmin();
      }

      // --- Pedagogical Subcollections ---
      match /cycles/{cycleId} { allow read, list: if isUserInSchool(schoolId); allow write: if isSchoolDirector(schoolId) || isAdmin(); }
      match /niveaux/{niveauId} { allow read, list: if isUserInSchool(schoolId); allow write: if isSchoolDirector(schoolId) || isAdmin(); }
      match /classes/{classId} { allow read, list: if isUserInSchool(schoolId); allow write: if isSchoolDirector(schoolId) || isAdmin(); }
      match /matieres/{subjectId} { allow read, list: if isUserInSchool(schoolId); allow write: if isSchoolDirector(schoolId) || isAdmin(); }
      match /emploi_du_temps/{entryId} { allow read, list: if isUserInSchool(schoolId); allow write: if isSchoolDirector(schoolId) || isAdmin(); }

      // --- Student-related Subcollections ---
      match /eleves/{studentId} {
        allow read, list: if isUserInSchool(schoolId);
        allow write: if isSchoolDirector(schoolId) || isAdmin();

        match /notes/{gradeId} {
            allow read: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId) || isAdmin() || canTeacherAccessStudent(studentId, schoolId);
        }
        match /paiements/{paymentId} {
             allow read, write: if isSchoolDirector(schoolId) || isAdmin();
        }
        match /affectations/{assignmentId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId) || isAdmin();
        }
      }

       // --- Other School Subcollections ---
       match /frais_scolarite/{feeId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isSchoolDirector(schoolId) || isAdmin();
      }
      match /absences/{absenceId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isSchoolDirector(schoolId) || isAdmin() || (isTeacher(schoolId) && isTeacherForClass(getClassIdForAbsence(), schoolId));
      }
      match /comptabilite/{transactionId} {
          allow read, list, write: if isSchoolDirector(schoolId) || isAdmin();
      }
      match /bibliotheque/{bookId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isSchoolDirector(schoolId) || isAdmin();
      }
      match /messagerie/{messageId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create: if isSchoolDirector(schoolId) || isTeacher(schoolId) || isAdmin();
          allow update, delete: if isAdmin();
      }
    }
  }
}
