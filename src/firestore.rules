
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && exists(/databases/$(database)/documents/super_admins/$(request.auth.uid));
    }

    function getUserSchoolId() {
      // Priorité aux custom claims pour l'efficacité, sinon lecture du document.
      if (request.auth.token.schoolId != null) {
        return request.auth.token.schoolId;
      }
      return get(/databases/$(database)/documents/utilisateurs/$(request.auth.uid)).data.schoolId;
    }

    function isSchoolMember(schoolId) {
      return isAuth() && getUserSchoolId() == schoolId;
    }
    
    // --- Global Access for Super Admins ---
    match /{document=**} {
        allow read, write: if isSuperAdmin();
    }
    
    // --- User Root Document Rules ---
    match /utilisateurs/{userId} {
        // Un utilisateur peut créer/lire/mettre à jour son propre document
        allow read, write: if isAuth() && request.auth.uid == userId;
    }

    // --- System-level Collections Rules ---
    match /system_logs/{logId} {
       // Allow any authenticated user to create logs, necessary for onboarding.
       allow create: if isAuth();
       allow read: if isSchoolMember(getUserSchoolId()) || isSuperAdmin();
    }
    
    match /system_settings/{settingId} {
       allow read: if isAuth(); // All authenticated users can read settings
       allow write: if isSuperAdmin();
    }

    // --- School Collections Rules ---
    match /ecoles/{schoolId} {
      // Any authenticated user can create a school (for onboarding)
      allow create: if isAuth(); 
      
      // Only members of the school can read its main document
      allow read: if isSchoolMember(schoolId);
      
      // Only the director of the school can update or delete it
      allow update, delete: if isSchoolMember(schoolId) && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }

    // Generic rule for all subcollections within a school
    match /ecoles/{schoolId}/{documents=**} {
      allow read, write: if isSchoolMember(schoolId);
    }
  }
}
