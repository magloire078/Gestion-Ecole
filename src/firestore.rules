
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    function isUserAdmin() {
      // Check for the admin custom claim on the user's token.
      return request.auth.token.admin == true;
    }

    function getUserSchoolId(userId) {
      return get(/databases/$(database)/documents/utilisateurs/$(userId)).data.schoolId;
    }
    
    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function getUserRole(userId) {
        // This path is now correct and points to the root collection.
        return get(/databases/$(database)/documents/personnel/$(userId)).data.role;
    }
    
    function isSchoolDirector(schoolId, userId) {
      return isUserInSchool(schoolId) && getUserRole(userId) == 'directeur';
    }

    function isCreatingOwnDocument(userId) {
      return request.auth.uid == userId;
    }
    
    // --- Incoming Data Validation ---
    function isNotChangingRole(request, resource) {
        // A user cannot change their own role.
        return request.resource.data.role == resource.data.role;
    }

    // --- Root Collections ---

    match /utilisateurs/{userId} {
      allow create: if isUserAuthenticated() && isCreatingOwnDocument(userId) && !exists(/databases/$(database)/documents/utilisateurs/$(userId));
      allow get: if isUserAuthenticated() && (isCreatingOwnDocument(userId) || isUserAdmin());
      allow update, delete: if isUserAdmin();
    }
    
    match /ecoles/{schoolId} {
        allow create: if isUserAuthenticated() && request.resource.data.directorId == request.auth.uid;
        allow get: if isUserInSchool(schoolId) || isUserAdmin();
        allow list: if isUserAuthenticated();
        // The school director or an admin can update the school's information.
        allow update: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        allow delete: if isUserAdmin(); // Only an admin can delete a school.
    }

    match /personnel/{staffId} {
        // Any authenticated member of the school can see the staff list.
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/personnel/$(staffId)).data.schoolId);
        // Director can create staff, OR a user can create their own 'directeur' profile during school creation.
        allow create: if (isUserInSchool(request.resource.data.schoolId) && isSchoolDirector(request.resource.data.schoolId, request.auth.uid)) || 
                       (isCreatingOwnDocument(staffId) && request.resource.data.role == 'directeur') ||
                       isUserAdmin();
        allow update: if (isUserInSchool(request.resource.data.schoolId) && (isSchoolDirector(request.resource.data.schoolId, request.auth.uid) || isUserAdmin())) || (isCreatingOwnDocument(staffId) && isNotChangingRole(request, resource));
        // Only a director or admin can remove a staff member.
        allow delete: if isUserInSchool(get(/databases/$(database)/documents/personnel/$(staffId)).data.schoolId) && (isSchoolDirector(get(/databases/$(database)/documents/personnel/$(staffId)).data.schoolId, request.auth.uid) || isUserAdmin());
    }

    match /eleves/{studentId} {
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId);
        // Any authenticated member of the school can update a student record.
        allow create, update: if isUserInSchool(request.resource.data.schoolId);
        // Only director or admin can delete a student
        allow delete: if isUserInSchool(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId) && (isSchoolDirector(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId, request.auth.uid) || isUserAdmin());

        match /notes/{gradeId} {
            // Any staff member of the school (teacher, admin, director) can read and write grades.
            allow read, write: if isUserInSchool(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId);
        }
        
        match /paiements/{paymentId} {
            // Authorized staff (admin, director, personnel, teacher) can create/read payments.
            allow read, list, create: if isUserInSchool(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId);
            allow update, delete: if isSchoolDirector(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId, request.auth.uid) || isUserAdmin();
        }
    }

    match /absences/{absenceId} {
        // Any authorized staff member can manage absences.
        allow read, write, list: if isUserInSchool(request.resource.data.schoolId);
    }
    
    match /comptabilite/{transactionId} {
        // Authorized staff can manage accounting.
        allow read, list, create: if isUserInSchool(request.resource.data.schoolId);
        allow update, delete: if isSchoolDirector(request.resource.data.schoolId, request.auth.uid) || isUserAdmin();
    }

    match /classes/{classId} {
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/classes/$(classId)).data.schoolId);
        // Any authenticated school member can update a class (e.g., to assign a teacher).
        allow update: if isUserInSchool(request.resource.data.schoolId);
        // Only a director or admin can create or delete a class.
        allow create: if isUserInSchool(request.resource.data.schoolId) && (isSchoolDirector(request.resource.data.schoolId, request.auth.uid) || isUserAdmin());
        allow delete: if isUserInSchool(get(/databases/$(database)/documents/classes/$(classId)).data.schoolId) && (isSchoolDirector(get(/databases/$(database)/documents/classes/$(classId)).data.schoolId, request.auth.uid) || isUserAdmin());
    }
    
    match /emploi_du_temps/{entryId} {
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/emploi_du_temps/$(entryId)).data.schoolId);
        allow write: if isUserInSchool(request.resource.data.schoolId) && (isSchoolDirector(request.resource.data.schoolId, request.auth.uid) || isUserAdmin());
    }
    
    match /messagerie/{messageId} {
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/messagerie/$(messageId)).data.schoolId);
        allow create: if isUserInSchool(request.resource.data.schoolId); // Any member of the school can send a message
        allow update, delete: if isUserInSchool(get(/databases/$(database)/documents/messagerie/$(messageId)).data.schoolId) && (isSchoolDirector(get(/databases/$(database)/documents/messagerie/$(messageId)).data.schoolId, request.auth.uid) || isUserAdmin());
    }

    match /bibliotheque/{bookId} {
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/bibliotheque/$(bookId)).data.schoolId);
        allow write: if isUserInSchool(request.resource.data.schoolId) && (isSchoolDirector(request.resource.data.schoolId, request.auth.uid) || isUserAdmin());
    }
    
    match /frais_scolarite/{feeId} {
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/frais_scolarite/$(feeId)).data.schoolId);
        allow write: if isUserInSchool(request.resource.data.schoolId) && (isSchoolDirector(request.resource.data.schoolId, request.auth.uid) || isUserAdmin());
    }
    
    match /cycles/{cycleId} {
        // Allow read for any user in the school
        allow read, list: if isUserInSchool(get(/databases/$(database)/documents/cycles/$(cycleId)).data.schoolId);
        // Allow write only by the school director or an admin.
        // This also implicitly allows creation during school setup if the creator is the director.
        allow write: if get(/databases/$(database)/documents/ecoles/$(request.resource.data.schoolId)).data.directorId == request.auth.uid || isUserAdmin();
    }
    match /admin_roles/{roleId} {
        allow read: if isUserAdmin();
        allow write: if isUserAdmin();
    }
  }
}

    