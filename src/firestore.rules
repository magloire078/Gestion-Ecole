rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règle temporaire permissive pour débloquer la création d'école.
    // TODO: Renforcer les règles une fois l'application stabilisée.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Exception : les formulaires de contact/enquête peuvent être créés par n'importe qui.
    match /contact_requests/{requestId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
    match /survey_responses/{responseId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
  }
}
