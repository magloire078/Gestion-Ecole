
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }

    // Fonction pour obtenir le schoolId de l'utilisateur à partir de son document racine.
    function getUserSchoolId() {
      return get(/databases/$(database)/documents/utilisateurs/$(request.auth.uid)).data.schoolId;
    }

    function isSchoolMember(schoolId) {
      return isAuth() && getUserSchoolId() == schoolId;
    }
    
    function isDirector(schoolId) {
        let schoolDoc = get(/databases/$(database)/documents/ecoles/$(schoolId));
        return isAuth() && schoolDoc.data.directorId == request.auth.uid;
    }

    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/super_admins/$(request.auth.uid));
    }
    
    // Règle pour le profil racine de l'utilisateur
    match /utilisateurs/{userId} {
        // L'utilisateur peut créer son propre document.
        // L'utilisateur peut lire et mettre à jour son propre document.
        allow read, write: if isAuth() && request.auth.uid == userId;
        // Le super admin peut lire et écrire pour des tâches administratives.
        allow read, write: if isSuperAdmin();
    }
    
    // Règles pour les super admins
    match /super_admins/{adminId} {
      allow read, write: if isAuth() && request.auth.uid == adminId;
    }

    match /system_settings/{settingId} {
       allow read, write: if isSuperAdmin();
    }
    
    match /system_logs/{logId} {
       allow create: if isSuperAdmin();
       allow read: if isAuth(); 
    }
    
    // Règles pour les écoles
    match /ecoles/{schoolId} {
      // Tout utilisateur authentifié peut créer une école (onboarding)
      allow create: if isAuth(); 
      // Seuls les membres de l'école ou un super admin peuvent la lire
      allow read: if isSchoolMember(schoolId) || isSuperAdmin();
      // Seul le directeur de l'école ou un super admin peut la modifier/supprimer
      allow update, delete: if isDirector(schoolId) || isSuperAdmin();
    }

    // Règle générale pour toutes les sous-collections d'une école
    match /ecoles/{schoolId}/{document=**} {
      // Un utilisateur authentifié peut créer des documents lors de l'inscription/création d'école.
      allow create: if isAuth();
      // Les membres de l'école ou un super admin ont un accès complet en lecture/écriture
      allow read, write: if isSchoolMember(schoolId) || isSuperAdmin();
    }
  }
}
