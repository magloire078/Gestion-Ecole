rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // Platform-level admin
      return request.auth.token.superAdmin == true;
    }

    function getSchoolIdFromToken() {
        return request.auth.token.schoolId;
    }

    function belongsToSchool(schoolId) {
        return isAuth() && getSchoolIdFromToken() == schoolId;
    }

    function isDirector(schoolId) {
        // Check if the requesting user's UID is the directorId on the school document
        return isAuth() && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }

    // --- Global Collections ---
    match /utilisateurs/{userId} {
      // Anyone can create their own user root doc, but not overwrite it
      allow create: if isAuth() && request.auth.uid == userId && !exists(path);
      // Only the user or a super admin can read or update it
      allow read, update: if isAuth() && (request.auth.uid == userId || isSuperAdmin());
    }

    match /super_admins/{adminId} {
        allow read, write: if isSuperAdmin();
    }

    match /system_logs/{logId} {
        allow read, create: if isSuperAdmin();
        allow update, delete: if false;
    }
    
    match /system_settings/{settingId} {
        allow read, write: if isSuperAdmin();
    }


    // --- School-Specific Collections ---
    match /ecoles/{schoolId} {
      // The user creating the school is the director. The director can always read it.
      // Any authenticated user can attempt to create a school.
      // SuperAdmins can do anything.
      allow get: if isSuperAdmin() || belongsToSchool(schoolId) || isDirector(schoolId);
      allow list: if isSuperAdmin();
      allow create: if isAuth(); 
      allow update: if isSuperAdmin() || isDirector(schoolId);
      allow delete: if isSuperAdmin();
    }

    // Generic rule for all subcollections under a school
    match /ecoles/{schoolId}/{document=**} {
      allow read: if isSuperAdmin() || belongsToSchool(schoolId);
      allow write: if isSuperAdmin() || isDirector(schoolId);
    }
  }
}
