
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    function isUserAdmin() {
      // Check for the admin custom claim on the user's token.
      // This is more secure and efficient than checking the database.
      return request.auth.token.admin == true;
    }

    function getUserSchoolId(userId) {
      return get(/databases/$(database)/documents/utilisateurs/$(userId)).data.schoolId;
    }
    
    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function getUserRoleFromSchool(schoolId, userId) {
        return get(/databases/$(database)/documents/ecoles/$(schoolId)/utilisateurs/$(userId)).data.role;
    }
    
    function isSchoolDirector(schoolId, userId) {
      return isUserInSchool(schoolId) && getUserRoleFromSchool(schoolId, userId) == 'directeur';
    }

    function isCreatingOwnDocument(userId) {
      return request.auth.uid == userId;
    }
    
    // --- Incoming Data Validation ---
    function isNotChangingRole(request, resource) {
        // A user cannot change their own role.
        return request.resource.data.role == resource.data.role;
    }

    // --- Root Collections ---

    match /utilisateurs/{userId} {
      allow create: if isUserAuthenticated() && isCreatingOwnDocument(userId) && !exists(/databases/$(database)/documents/utilisateurs/$(userId));
      allow get: if isUserAuthenticated() && (isCreatingOwnDocument(userId) || isUserAdmin());
      allow list, update, delete: if isUserAdmin();
    }
    
    match /ecoles/{schoolId} {
        allow create: if isUserAuthenticated() && request.resource.data.directorId == request.auth.uid;
        allow get: if isUserInSchool(schoolId);
        allow list: if isUserAuthenticated();
        // The school director or an admin can update the school's information.
        allow update: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        allow delete: if isUserAdmin(); // Only an admin can delete a school.
        
        match /absences/{absenceId} {
            // Any authorized staff member can manage absences.
            allow read, write, list: if isUserInSchool(schoolId) && (isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin() || getUserRoleFromSchool(schoolId, request.auth.uid) == 'enseignant' || getUserRoleFromSchool(schoolId, request.auth.uid) == 'personnel');
        }

        // --- Subcollections with Specific Rules ---

        match /utilisateurs/{userId} {
            // A user can create their own profile in a school (onboarding)
            // A director or admin can create users.
            allow create: if isCreatingOwnDocument(userId) || isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
            
            // A director or admin can modify any profile.
            // A user can modify their own profile, but NOT their role.
            allow update: if (isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin()) || (isCreatingOwnDocument(userId) && isNotChangingRole(request, resource));

            // Reading user list is restricted to admins and directors for privacy.
            allow get, list: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();

            // Only a director or admin can remove a user from the school.
            allow delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }

        match /eleves/{studentId} {
            allow read, list, create, update: if isUserInSchool(schoolId);
            allow delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();

            match /notes/{gradeId} {
                // Any staff member of the school (teacher, admin, director) can read and write grades.
                allow read, write: if isUserInSchool(schoolId);
            }
            
            match /paiements/{paymentId} {
                // Authorized staff (admin, director, personnel, teacher) can create/read payments.
                allow read, list, create: if isUserInSchool(schoolId) && (isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin() || getUserRoleFromSchool(schoolId, request.auth.uid) == 'personnel' || getUserRoleFromSchool(schoolId, request.auth.uid) == 'enseignant');
                allow update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
            }
        }
        
        match /comptabilite/{transactionId} {
             // Authorized staff (admin, director, personnel, teacher) can manage accounting.
            allow read, list, create: if isUserInSchool(schoolId) && (isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin() || getUserRoleFromSchool(schoolId, request.auth.uid) == 'personnel' || getUserRoleFromSchool(schoolId, request.auth.uid) == 'enseignant');
            allow update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }

        match /classes/{classId} {
            allow read, list: if isUserInSchool(schoolId);
            // Any authenticated school member can update a class (e.g., to assign a teacher).
            allow update: if isUserInSchool(schoolId);
            // Only a director or admin can create or delete a class.
            allow create, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }
        
        match /emploi_du_temps/{entryId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }

        match /personnel/{staffId} {
            allow read, list: if isUserInSchool(schoolId);
            allow create, update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }
        
        match /messagerie/{messageId} {
            allow read, list: if isUserInSchool(schoolId);
            allow create: if isUserInSchool(schoolId); // Any member of the school can send a message
            allow update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }

        match /bibliotheque/{bookId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }
        
        match /frais_scolarite/{feeId} {
             allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }
        
         match /cycles/{cycleId} {
             allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin();
        }
    }
  }
}
