rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // In a real application, you would set this custom claim on the user's token
      return request.auth.token.admin == true;
    }

    function getUserSchoolId() {
      // Path to the user's document in the global /users collection
      let userDocPath = /databases/$(database)/documents/utilisateurs/$(request.auth.uid);
      
      // Check if the document exists before accessing data
      if (exists(userDocPath)) {
        return get(userDocPath).data.schoolId;
      }
      return null;
    }
    
    function isUserInSchool(schoolId) {
      // Ensures the user is authenticated and their schoolId matches the requested one
      return isAuth() && getUserSchoolId() == schoolId;
    }
    
    function isSchoolDirector(schoolId) {
       // On read/update, check existing resource. On create, check incoming resource.
       let schoolDoc = get(/databases/$(database)/documents/ecoles/$(schoolId));
       return isAuth() && schoolDoc.data.directorId == request.auth.uid;
    }
    
    function getStaffRole(userId, schoolId) {
      let staffDocPath = /databases/$(database)/documents/ecoles/$(schoolId)/personnel/$(userId);
      if (exists(staffDocPath)) {
        return get(staffDocPath).data.role;
      }
      return null;
    }
    
    function isTeacher(schoolId) {
        return getStaffRole(request.auth.uid, schoolId) == 'enseignant';
    }

    // --- Global Collections ---

    match /utilisateurs/{userId} {
      // A user can create their own user_root document upon signup
      // A user can read or update their own document
      // An admin can read any user document
      allow read, write: if isAuth() && request.auth.uid == userId;
      allow read: if isAdmin(); // Admin can read user mapping
    }

    match /admin_roles/{roleId} {
      // Only admins can manage administrative roles
      allow read, write: if isAdmin();
    }

    // --- School-based Collections ---

    match /ecoles/{schoolId} {
      allow read: if isUserInSchool(schoolId) || isAdmin();
      allow create: if isAuth(); // Allow any authenticated user to create a school initially
      // Director of the school (by checking the resource being updated) or an admin can update.
      allow update: if (isAuth() && resource.data.directorId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();

      // --- Staff Subcollection ---
      match /personnel/{staffId} {
        allow list, read: if isUserInSchool(schoolId);
        allow create, update: if isSchoolDirector(schoolId) || isAdmin();
        allow delete: if isSchoolDirector(schoolId) || isAdmin();
      }

      // --- Other Subcollections ---
      match /eleves/{studentId} {
        allow read, list: if isUserInSchool(schoolId);
        allow create, update, delete: if isSchoolDirector(schoolId) || isAdmin();

        match /notes/{gradeId} {
            allow read: if isUserInSchool(schoolId);
            allow write: if isTeacher(schoolId) || isSchoolDirector(schoolId) || isAdmin();
        }
        
        match /paiements/{paymentId} {
             allow read, write: if isSchoolDirector(schoolId) || isAdmin();
        }
      }

      match /classes/{classId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create, update, delete: if isSchoolDirector(schoolId) || isAdmin();
      }

       match /frais_scolarite/{feeId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create, update, delete: if isSchoolDirector(schoolId) || isAdmin();
      }
      
       match /absences/{absenceId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isTeacher(schoolId) || isSchoolDirector(schoolId) || isAdmin();
      }

       match /comptabilite/{transactionId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create, update, delete: if isSchoolDirector(schoolId) || isAdmin();
      }

      match /bibliotheque/{bookId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create, update, delete: if isSchoolDirector(schoolId) || isAdmin();
      }
      
      match /emploi_du_temps/{entryId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create, update, delete: if isSchoolDirector(schoolId) || isAdmin();
      }
      
      match /messagerie/{messageId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create: if isSchoolDirector(schoolId) || isTeacher(schoolId) || isAdmin();
          allow update, delete: if isAdmin(); // Only admin can delete messages for now
      }
    }
  }
}
