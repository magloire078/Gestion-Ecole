rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }

    // Fonction pour obtenir le schoolId de l'utilisateur, soit depuis les custom claims, soit depuis le document /utilisateurs
    function getUserSchoolId() {
      // Priorité aux custom claims pour l'efficacité
      if (exists(request.auth.token) && request.auth.token.schoolId != null) {
        return request.auth.token.schoolId;
      }
      // Méthode de secours en lisant le document utilisateur
      return get(/databases/$(database)/documents/utilisateurs/$(request.auth.uid)).data.schoolId;
    }

    function isSchoolMember(schoolId) {
      return isAuth() && getUserSchoolId() == schoolId;
    }
    
    function isDirector(schoolId) {
        return isSchoolMember(schoolId) && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }

    function isSuperAdmin() {
      // Dans le futur, ceci pourrait vérifier un custom claim `superAdmin: true`
      return exists(/databases/$(database)/documents/super_admins/$(request.auth.uid));
    }
    
    match /super_admins/{adminId} {
      allow read, write: if isAuth() && request.auth.uid == adminId;
    }

    match /system_settings/{settingId} {
       allow read, write: if isSuperAdmin();
    }
    
    match /system_logs/{logId} {
       allow create: if isAuth(); // Permet à tout utilisateur authentifié de créer un log (ex: création d'école)
       allow read: if isAuth(); 
    }
    
    match /utilisateurs/{userId} {
        // Un utilisateur peut créer/lire/mettre à jour son propre document
        allow read, write: if isAuth() && request.auth.uid == userId;
        // Le super admin peut également y accéder
        allow read, write: if isSuperAdmin();
    }
    
    match /ecoles/{schoolId} {
      // Tout utilisateur authentifié peut créer une école (pour l'onboarding)
      allow create: if isAuth(); 
      // Seuls les membres de l'école ou un super admin peuvent la lire
      allow read: if isSchoolMember(schoolId) || isSuperAdmin();
      // Seul le directeur ou un super admin peut la modifier/supprimer
      allow update, delete: if isDirector(schoolId) || isSuperAdmin();
    }

    // Règle générale pour toutes les sous-collections d'une école
    match /ecoles/{schoolId}/{document=**} {
      // Les membres de l'école ou les super admins ont un accès complet
      allow read, write: if isSchoolMember(schoolId) || isSuperAdmin();
    }
  }
}
