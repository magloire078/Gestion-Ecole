rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return request.auth.token.superAdmin == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // --- NOUVELLE FONCTION FIABILISÉE ---
    function getSchoolId() {
        // Priorité 1: Le custom claim dans le token (le plus rapide et le plus sûr)
        if (request.auth.token.schoolId != null) {
            return request.auth.token.schoolId;
        }
        // Priorité 2: Le document racine de l'utilisateur
        let userRootDoc = get(/databases/$(database)/documents/utilisateurs/$(request.auth.uid));
        if (userRootDoc != null) {
            return userRootDoc.data.schoolId;
        }
        return null;
    }
    
    function isDirector() {
        let schoolId = getSchoolId();
        return schoolId != null && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }
    
    function isStaffOfSchool(schoolId) {
       return exists(/databases/$(database)/documents/ecoles/$(schoolId)/personnel/$(request.auth.uid));
    }
    
    // --- NOUVELLE FONCTION DE PERMISSION ---
    function belongsToSchool(schoolId) {
      return isAuth() && getSchoolId() == schoolId;
    }

    // --- System-level collections for Super Admins ---
    match /super_admins/{adminId} {
      allow read, write: if isSuperAdmin();
    }
    match /system_logs/{logId} {
      allow read, create: if isSuperAdmin() || isAuth();
    }
    match /system_settings/{settingId} {
      allow read, write: if isSuperAdmin();
    }

    // --- User root document ---
    match /utilisateurs/{userId} {
      allow read, update: if isOwner(userId) || isSuperAdmin();
      allow create: if isAuth() && isOwner(userId);
    }

    // --- School Collections ---
    match /ecoles/{schoolId} {
      allow get: if belongsToSchool(schoolId) || isSuperAdmin();
      allow create: if isAuth() && request.resource.data.directorId == request.auth.uid;
      allow update: if isDirector() || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // --- School Subcollections ---
    match /ecoles/{schoolId}/{document=**} {
      allow read, write: if isDirector() || isSuperAdmin() || belongsToSchool(schoolId);
    }
  }
}
