
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && exists(/databases/$(database)/documents/super_admins/$(request.auth.uid));
    }

    function getUserSchoolId() {
      return request.auth.token.schoolId;
    }

    function isSchoolMember(schoolId) {
      return isAuth() && getUserSchoolId() == schoolId;
    }
    
    function isDirector(schoolId) {
        return isSchoolMember(schoolId) && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }
    
    // --- Super Admin full access ---
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }
    
    // --- Public/User-specific collections ---
    match /utilisateurs/{userId} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }
    
    match /system_logs/{logId} {
       allow create: if isAuth();
       allow read: if isAuth(); 
    }
    
    match /system_settings/{settingId} {
       allow read: if isAuth();
       allow write: if isSuperAdmin(); // Only super admins can change global settings
    }
    
    // --- School creation ---
    match /ecoles/{schoolId} {
      allow create: if isAuth();
      allow read: if isSchoolMember(schoolId);
      allow update, delete: if isDirector(schoolId);
    }

    // --- Sub-collections within a school ---
    match /ecoles/{schoolId}/{document=**} {
      // Allow any member of the school to read/write within their school's documents.
      // UI-level permissions will handle who can do what.
      allow read, write: if isSchoolMember(schoolId);
    }
  }
}
