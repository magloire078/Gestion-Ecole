
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public creation for contact and survey forms
    match /contact_requests/{requestId} {
      allow create: if true;
      // Allow authenticated users to manage them
      allow read, update, delete, list: if request.auth != null;
    }
     match /survey_responses/{responseId} {
      allow create: if true;
       // Allow authenticated users to manage them
      allow read, update, delete, list: if request.auth != null;
    }

    // Default rule: allow authenticated users to read/write everything else.
    // This is a broad rule for development.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
