
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }

    function getUserSchoolId(userId) {
      return get(/databases/$(database)/documents/utilisateurs/$(userId)).data.schoolId;
    }

    function isSchoolMember(schoolId) {
      return isAuth() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function isDirector(schoolId) {
        return isSchoolMember(schoolId) && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }

    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/super_admins/$(request.auth.uid));
    }
    
    function isCreatingOwnProfileAsDirector(schoolId) {
      // Allow if the incoming school document has a directorId matching the user,
      // and the user is creating their own staff profile.
      let schoolData = request.resource.data;
      return schoolData.directorId == request.auth.uid;
    }
    
    match /utilisateurs/{userId} {
        allow read, write: if isAuth() && request.auth.uid == userId;
        allow read, write: if isSuperAdmin();
    }
    
    match /ecoles/{schoolId} {
      allow create: if isAuth(); 
      allow read: if isSchoolMember(schoolId) || isSuperAdmin();
      allow update, delete: if isDirector(schoolId) || isSuperAdmin();
    }
    
    match /system_logs/{logId} {
       allow create: if isAuth(); // Allow any authenticated user to create a log
       allow read: if isAuth();
    }
    
    match /super_admins/{adminId} {
      allow read, write: if isAuth() && request.auth.uid == adminId;
    }

    match /system_settings/{settingId} {
       allow read, write: if isSuperAdmin();
    }
    
    match /ecoles/{schoolId}/personnel/{staffId} {
       allow create: if (isDirector(schoolId)) || (request.auth.uid == staffId && isCreatingOwnProfileAsDirector(schoolId));
       allow read, update, delete: if isSchoolMember(schoolId) || isSuperAdmin();
    }

    // Fallback rule for other subcollections
    match /ecoles/{schoolId}/{document=**} {
      allow read, write: if isSchoolMember(schoolId) || isSuperAdmin();
    }
  }
}
