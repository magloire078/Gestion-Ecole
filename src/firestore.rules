
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    // --- Global Collections ---
    // Any authenticated user can manage their own user_root document.
    match /utilisateurs/{userId} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }

    // Admins can manage roles.
    match /admin_roles/{roleId} {
      allow read, write: if isAuth() && request.auth.token.admin == true;
    }

    // --- School Collections (Temporarily Permissive) ---
    // Any authenticated user can create a school.
    // Any authenticated user can read, write, update any school data for now.
    match /ecoles/{schoolId}/{allPaths=**} {
      allow read, write: if isAuth();
    }
  }
}
