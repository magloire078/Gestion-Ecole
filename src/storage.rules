
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if a user belongs to a school
    function isUserInSchool(schoolId) {
      return exists(/databases/(default)/documents/utilisateurs/$(request.auth.uid)) &&
             get(/databases/(default)/documents/utilisateurs/$(request.auth.uid)).data.schoolId == schoolId;
    }

    // Match any file in the `ecoles` directory
    match /ecoles/{schoolId}/{allPaths=**} {
      // Allow read access to anyone (e.g., for public logos or student photos)
      allow read;
      
      // Allow write access (create, update, delete) only to users who are part of that specific school
      allow write: if request.auth != null && isUserInSchool(schoolId);
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
