rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Match any file in the `ecoles` directory
    match /ecoles/{schoolId}/{allPaths=**} {
      // Allow read access to anyone (e.g., for public logos or student photos)
      allow read;
      
      // Allow write access only to authenticated users whose custom claim `schoolId`
      // matches the `schoolId` in the storage path.
      allow write: if request.auth != null && request.auth.token.schoolId == schoolId;
    }

    // Default deny all other paths for security
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
