rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règle temporaire et très permissive pour le débogage.
    // N'importe quel utilisateur authentifié peut lire et écrire toutes les données.
    // ATTENTION: Ce n'est pas sécurisé pour un environnement de production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
