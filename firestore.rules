
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // In a real app, this would check a custom claim set by a backend process.
      // For now, we can check a field in a user's profile if needed, but we'll assume a claim.
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isSchoolMember(schoolId) {
        // A user is a member if their token's schoolId matches OR if they have a staff profile in that school.
        return isAuth() && 
               (request.auth.token.schoolId == schoolId || 
                exists(/databases/$(database)/documents/ecoles/$(schoolId)/personnel/$(request.auth.uid)));
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }

    // ========== GLOBAL RULES ==========

    // Super admins can do anything.
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }

    // Unauthenticated users cannot access anything.
    match /{path=**} {
      allow read, write: if false;
    }

    // Règle de création d'une école
    match /ecoles/{schoolId} {
      // Anyone authenticated can read the list of schools.
      allow list, get: if isAuth();

      // ANY authenticated user can create a NEW school document
      // as long as they are assigning themselves as the director.
      allow create: if isAuth() && request.resource.data.directorId == request.auth.uid;
      
      // Only school members can read, update, or delete their own school document.
      allow read, update, delete: if isSchoolMember(schoolId);
    }
    
    // A user can read/write their own root document.
    match /utilisateurs/{userId} {
      allow read, write: if isUser(userId);
    }

    // ========== SCHOOL-SPECIFIC RULES ==========
    
    // Special rule for the director creating their own staff profile during onboarding
    match /ecoles/{schoolId}/personnel/{staffId} {
        // Allow creating a staff profile IF:
        // 1. The user is creating their own profile (UID matches).
        // 2. The school document being created in the same transaction has this user as the director.
        // This rule specifically handles the batch write during school creation.
        allow create: if isUser(staffId) && getAfter(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == staffId;
        
        // For other operations, only school members are allowed.
        allow get, list, update, delete: if isSchoolMember(schoolId);
    }
    
    // Generic rule for all other subcollections within a school.
    // Allows school members to read/write data within their own school.
    match /ecoles/{schoolId}/{collection}/{docId=**} {
      allow get, list, write: if isSchoolMember(schoolId);
    }
  }
}
