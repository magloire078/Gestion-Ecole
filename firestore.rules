rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getUserSchoolId() {
      // It's safer to read from the existing resource for security rules
      // rather than relying on custom claims that might not be set yet.
      return get(/databases/$(database)/documents/schools/$(request.auth.token.schoolId)).data.schoolId;
    }

    function isUserInSchool(schoolId) {
      // Check if the user document exists within the school context
      return isUserAuthenticated() && exists(/databases/$(database)/documents/schools/$(schoolId)/users/$(request.auth.uid));
    }

    function isCreatingOwnSchool(schoolId) {
      // Allow if user is authenticated and the incoming document's directorId matches their UID.
      return isUserAuthenticated() && request.resource.data.directorId == request.auth.uid;
    }
    
    function isCreatingOwnProfile(userId) {
        // Allow if the user is authenticated and is creating their own user document.
        return isUserAuthenticated() && request.auth.uid == userId;
    }
    
    // School-specific data
    match /schools/{schoolId} {
      
      // Allow a user to read their own school's main document.
      allow get: if isUserInSchool(schoolId);
      
      // Allow an authenticated user to create their school document.
      allow create: if isCreatingOwnSchool(schoolId);

      // Deny listing or updating/deleting the school document itself by clients.
      allow list, update, delete: if false;

      // Rules for the users subcollection
      match /users/{userId} {
         // Allow users to create their own user profile during onboarding
         allow create: if isCreatingOwnProfile(userId);
         // Once created, only allow users to read/update their own profile
         allow read, update: if isUserInSchool(schoolId) && request.auth.uid == userId;
         // Deny deleting user profiles via client
         allow delete: if false;
      }
      
      // Rules for all other subcollections within a school
      match /{otherCollections}/{docId} {
         // Users can read/write/delete data within their own school's collections,
         // but cannot create (creations are handled by specific logic like student registration pages).
         allow read, write, delete: if isUserInSchool(schoolId);
         allow create: if false; // Deny generic creation for other collections
      }
    }
  }
}
