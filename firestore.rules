rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuth() {
      return request.auth != null;
    }
    
    // RÈGLES ULTRA SIMPLES POUR TEST
    match /ecoles/{schoolId} {
      allow create: if isAuth();
      allow read, update: if isAuth();
    }
    
    match /ecoles/{schoolId}/personnel/{staffId} {
      allow create: if isAuth();
      allow read, update: if isAuth();
    }
    
    match /utilisateurs/{userId} {
      allow create, read, write: if isAuth();
    }
    
    match /system_logs/{logId} {
      allow create, read: if isAuth();
    }
    
    // Règle générique pour tout le reste
    match /{document=**} {
      allow read, write: if isAuth();
    }
  }
}
