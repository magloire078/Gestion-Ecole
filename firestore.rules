rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // Les super-admins ont un claim personnalisé.
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isSchoolMember(schoolId) {
        // L'utilisateur appartient à l'école via un claim personnalisé.
        return isAuth() && request.auth.token.schoolId == schoolId;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }

    // ========== GLOBAL RULES ==========

    // Règle globale : les super-admins peuvent tout lire et écrire.
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }

    // Règle de base pour la collection des écoles.
    match /ecoles/{schoolId} {
      // N'importe quel utilisateur authentifié peut créer une école.
      allow create: if isAuth();
      // Seuls les membres de l'école peuvent lire, mettre à jour ou supprimer leur école.
      allow read, update, delete: if isSchoolMember(schoolId);
    }
    
    // Le document racine d'un utilisateur ne peut être géré que par lui-même.
    match /utilisateurs/{userId} {
      allow read, write: if isUser(userId);
    }

    // Les journaux système sont en lecture seule et peuvent être créés par n'importe qui.
    match /system_logs/{logId} {
      allow create, read: if isAuth();
    }

    // ========== SCHOOL-SPECIFIC RULES ==========
    
    // Règle cruciale pour la création du profil du directeur au moment de la création de l'école.
    match /ecoles/{schoolId}/personnel/{staffId} {
      // L'utilisateur peut créer son propre profil de personnel...
      allow create: if isUser(staffId) 
                    // ... et les données de l'école en cours de création confirment qu'il est le directeur.
                    && getAfter(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == staffId;

      // Après la création, seuls les membres de l'école peuvent gérer les profils du personnel.
      allow read, update, delete: if isSchoolMember(schoolId);
    }

    // Règle générique pour toutes les autres sous-collections d'une école.
    // Elle permet aux membres de l'école de gérer les données de leur propre école.
    match /ecoles/{schoolId}/{collection}/{docId=**} {
      allow read, write: if isSchoolMember(schoolId);
    }
  }
}
