
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Autorise toutes les opérations de lecture et d'écriture pour n'importe quel utilisateur authentifié
    // sur n'importe quel document de la base de données.
    // La syntaxe {allPaths=**} assure que la règle s'applique récursivement à toutes les sous-collections.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Règle pour permettre aux utilisateurs non authentifiés de soumettre
    // le formulaire de contact. Elle doit être plus spécifique que la règle générale.
    match /contact_requests/{requestId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
    
    // Règle pour permettre aux utilisateurs non authentifiés de soumettre
    // le formulaire d'enquête.
     match /survey_responses/{responseId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
  }
}
