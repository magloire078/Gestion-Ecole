rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }
    
    // Fonction pour vérifier si l'utilisateur est directeur (selon BD)
    function isDirectorOfSchool(schoolId) {
        // Sécurisé car utilisé seulement sur des documents spécifiques
        let schoolData = get(/databases/$(database)/documents/ecoles/$(schoolId)).data;
        return isAuth() && request.auth.uid == schoolData.directorId;
    }
    
    // Fonction pour vérifier si l'utilisateur est membre (via claims OU via directeur BD)
    function isSchoolMember(schoolId) {
      // Membre = a le claim schoolId OU est directeur selon BD
      return isAuth() && (
        request.auth.token.schoolId == schoolId ||
        get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid
      );
    }
    
    // ========== GLOBAL SUPER ADMIN RULE ==========
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }

    // ========== ONBOARDING PHASE (Pas encore de schoolId dans les claims) ==========
    
    // 1. CRÉATION UTILISATEUR - Pendant la création de compte
    match /utilisateurs/{userId} {
      // Un utilisateur peut créer son propre document (phase 1 d'onboarding)
      allow create: if isUser(userId);
      
      // Un utilisateur peut lire/mettre à jour son propre document
      allow read, update: if isUser(userId);
      
      // Suppression non autorisée
      allow delete: if false;
    }
    
    // 2. CRÉATION ÉCOLE - Phase principale d'onboarding
    match /ecoles/{schoolId} {
      // CRÉATION : n'importe quel utilisateur authentifié peut créer une école
      // (La vérification qu'il se désigne comme directeur se fait côté code)
      allow create: if isAuth();
      
      // LECTURE après création : utilisateur authentifié + (est directeur OU a claim schoolId)
      allow read: if isAuth() && isSchoolMember(schoolId);
      
      // MISE À JOUR : seulement le directeur
      allow update: if isDirectorOfSchool(schoolId);
      
      // Pas de suppression
      allow delete: if false;
    }
    
    // 3. CRÉATION PROFIL PERSONNEL - Pendant l'onboarding
    match /ecoles/{schoolId}/personnel/{staffId} {
      // CRÉATION PENDANT ONBOARDING : l'utilisateur peut créer son propre profil
      allow create: if isAuth() && staffId == request.auth.uid;
      
      // Après création : règles normales
      allow read: if isSchoolMember(schoolId);
      allow update: if isDirectorOfSchool(schoolId) || isUser(staffId);
      allow delete: if isDirectorOfSchool(schoolId);
    }
    
    // 4. LOGS SYSTÈME
    match /system_logs/{logId} {
      allow create: if isAuth();
      allow read: if isSuperAdmin() || (isAuth() && request.auth.token.isDirector == true);
    }

    // ========== POST-ONBOARDING (Quand schoolId est dans les claims) ==========
    
    // Règle générique pour TOUTES les autres données scolaires
    // Cette règle s'applique quand l'utilisateur a déjà le claim schoolId
    match /ecoles/{schoolId}/{collection}/{document=**} {
      allow read, write: if isSchoolMember(schoolId);
    }
    
    // Exception pour la collection 'personnel' qui a ses propres règles
    match /ecoles/{schoolId}/personnel/{document=**} {
      allow read, write: if isSchoolMember(schoolId);
    }
  }
}
