rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getSchoolId() {
      // Allow reading custom claims from the token.
      // Make sure to set these custom claims when the user logs in.
      return request.auth.token.schoolId;
    }

    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getSchoolId() == schoolId;
    }
    
    // School-specific data
    match /schools/{schoolId}/{document=**} {
        // Allow any authenticated user from the school to read and write any document within their school's path.
        // This is a broad rule and can be refined for more granular control if needed.
        allow read, write: if isUserInSchool(schoolId);
    }

    // You can keep more specific rules for certain collections if needed, but they must be placed correctly.
    // For example, if you wanted to restrict user profile deletion, you'd do it like this:
    match /schools/{schoolId}/users/{userId} {
        // A user can read their own profile, and school members can list users.
        allow get: if isUserAuthenticated() && request.auth.uid == userId;
        allow list: if isUserInSchool(schoolId);
        // A user can create or update their own profile.
        allow write: if isUserAuthenticated() && request.auth.uid == userId;
        // Users cannot delete profiles.
        allow delete: if false;
    }
  }
}
