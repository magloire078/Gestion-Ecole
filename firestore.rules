rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }
    
    // Version simplifiée : se base uniquement sur le token, plus fiable et performant.
    function isMemberOfSchool(schoolId) {
      return isAuth() && request.auth.token.schoolId == schoolId;
    }

    function isDirector(schoolId) {
        // La lecture ('get') est acceptable ici car elle est ciblée et sécurisée
        // par le fait que la règle n'est utilisée que dans des contextes spécifiques.
        return isAuth() && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }
    
    function isCreatingSchoolAsDirector() {
        return isAuth() && request.resource.data.directorId == request.auth.uid;
    }
    
    function canCreateDirectorProfile(schoolId, staffId) {
        return isAuth() && 
               staffId == request.auth.uid && 
               request.resource.data.role == 'directeur' &&
               request.resource.data.uid == request.auth.uid;
    }

    // ========== GLOBAL RULES ==========
    match /system_settings/{settingId} {
        allow read: if isAuth();
        allow write: if isSuperAdmin();
    }
    
    match /super_admins/{adminId} {
        allow read, write: if isSuperAdmin();
    }
    
    match /system_logs/{logId} {
      allow create: if isAuth();
      allow read: if isSuperAdmin() || (isAuth() && request.auth.token.isDirector == true);
    }

    // ========== ONBOARDING & USER ROOT ==========
    match /utilisateurs/{userId} {
      allow read, create: if isUser(userId);
      // Autorise la mise à jour du schoolId pendant l'onboarding
      allow update: if isUser(userId) && request.resource.data.keys().hasOnly(['schoolId']);
    }
    
    // ========== SCHOOL & SUBCOLLECTIONS RULES ==========
    match /ecoles/{schoolId} {
      allow create: if isCreatingSchoolAsDirector();
      
      // Règle de lecture explicite et fiabilisée
      allow read: if isSuperAdmin() || isMemberOfSchool(schoolId);
      
      allow update: if isSuperAdmin() || isDirector(schoolId);
      
      allow delete: if false; // Pas de suppression physique

      // Règle SPÉCIFIQUE pour la création du profil directeur pendant l'onboarding
      match /personnel/{staffId} {
        allow create: if canCreateDirectorProfile(schoolId, staffId);
        
        // Après création, les règles normales s'appliquent
        allow read: if isSuperAdmin() || isMemberOfSchool(schoolId);
        allow update: if isSuperAdmin() || isDirector(schoolId) || isUser(staffId);
        allow delete: if isSuperAdmin() || isDirector(schoolId);
      }
      
      // Règle générique pour les autres sous-collections
      // Ceci est plus simple et moins sujet aux erreurs que de lister chaque collection.
      match /{collection}/{document=**} {
        allow read, write: if isMemberOfSchool(schoolId);
      }
    }
  }
}
