rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // Check for a custom claim `superAdmin` set to true.
      return isAuth() && request.auth.token.superAdmin == true;
    }

    function isSchoolMember(schoolId) {
      // Check for a custom claim `schoolId`.
      return isAuth() && request.auth.token.schoolId == schoolId;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }

    // ========== GLOBAL RULES ==========
    
    // Super Admins can do anything.
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
    
    // Any authenticated user can create a school.
    match /ecoles/{schoolId} {
      allow create: if isAuth();
      // Only school members can read/update their school.
      allow read, update, delete: if isSchoolMember(schoolId);
    }
    
    // Any authenticated user can manage their own user_root document.
    match /utilisateurs/{userId} {
      allow read, write: if isUser(userId);
    }
    
    // System logs are append-only for authenticated users.
    match /system_logs/{logId} {
      allow create, read: if isAuth();
    }

    // ========== SCHOOL-SPECIFIC RULES ==========

    // Rule for creating the director's staff profile during school creation.
    match /ecoles/{schoolId}/personnel/{staffId} {
        // Allow creation if the user is creating their own profile AND
        // the school being created designates them as the director.
        allow create: if isUser(staffId) && request.resource.data.role == 'directeur' 
                      && getAfter(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
        
        // After creation, only school members can read/write personnel data.
        allow read, update, delete: if isSchoolMember(schoolId);
    }

    // Generic rule for all other subcollections within a school.
    // This allows school members to manage their own school's data.
    match /ecoles/{schoolId}/{collection}/{docId} {
      allow read, write: if isSchoolMember(schoolId);
    }
  }
}
