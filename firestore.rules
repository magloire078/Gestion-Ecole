rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getUserSchoolId() {
      // Allow reading custom claims from the token.
      // Make sure to set these custom claims when the user logs in.
      return request.auth.token.schoolId;
    }

    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getUserSchoolId() == schoolId;
    }
    
    // School-specific data
    match /schools/{schoolId} {
      // Allow read/write access to the school document itself for users of that school.
      allow read, write: if isUserInSchool(schoolId);

      // Rules for subcollections within a school
      match /{collection}/{docId} {
         allow read, write: if isUserInSchool(schoolId);
      }

      // More specific rules can be added here. For example, for user profiles:
      match /users/{userId} {
        // A user can read their own profile, and school members can list users.
        allow get: if isUserAuthenticated() && request.auth.uid == userId;
        allow list: if isUserInSchool(schoolId);
        // A user can create or update their own profile.
        allow write: if isUserAuthenticated() && request.auth.uid == userId;
        // Users cannot delete profiles.
        allow delete: if false;
      }
    }
  }
}

    