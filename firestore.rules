rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Custom claim set on the user's token, e.g. via a Cloud Function
      return request.auth.token.admin == true;
    }

    function getUserSchoolId(userId) {
      let userDocPath = /databases/$(database)/documents/utilisateurs/$(userId);
      if (exists(userDocPath)) {
        return get(userDocPath).data.schoolId;
      }
      return null;
    }
    
    function isUserInSchool(schoolId) {
      return isAuth() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function isSchoolDirector(schoolId) {
       let schoolDoc = get(/databases/$(database)/documents/ecoles/$(schoolId));
       return isAuth() && schoolDoc.data.directorId == request.auth.uid;
    }
    
    function getStaffRole(userId, schoolId) {
        let staffDocPath = /databases/$(database)/documents/ecoles/$(schoolId)/personnel/$(userId);
        if (exists(staffDocPath)) {
            return get(staffDocPath).data.role;
        }
        return null;
    }

    function isTeacher(schoolId) {
        return getStaffRole(request.auth.uid, schoolId) == 'enseignant';
    }

    function isClassTeacher(schoolId, classeId) {
      let classeDoc = get(/databases/$(database)/documents/ecoles/$(schoolId)/classes/$(classeId));
      return isAuth() && isTeacher(schoolId) && classeDoc.data.mainTeacherId == request.auth.uid;
    }

    // --- Global Collections ---

    match /utilisateurs/{userId} {
      allow read, write: if isAuth() && request.auth.uid == userId;
      allow read: if isAdmin();
    }

    match /admin_roles/{roleId} {
      allow read, write: if isAdmin();
    }
    
    // --- School-Specific Collections ---

    match /ecoles/{schoolId} {
      allow read: if isUserInSchool(schoolId) || isAdmin();
      allow create: if isAuth();
      allow update: if isSchoolDirector(schoolId) || isAdmin();
      allow delete: if isAdmin();
      
      // === CYCLES ===
      match /cycles/{cycleId} {
        allow read, list: if isUserInSchool(schoolId);
        allow write: if isSchoolDirector(schoolId) || isAdmin();
      }
      
      // === NIVEAUX ===
      match /niveaux/{niveauId} {
        allow read, list: if isUserInSchool(schoolId);
        allow write: if isSchoolDirector(schoolId) || isAdmin();
      }
      
      // === CLASSES ===
      match /classes/{classeId} {
        allow read, list: if isUserInSchool(schoolId);
        allow write: if isSchoolDirector(schoolId) || isAdmin();
      }

      // === EMPLOIS DU TEMPS ===
      match /emploi_du_temps/{scheduleId} {
        allow read, list: if isUserInSchool(schoolId);
        allow write: if isSchoolDirector(schoolId) || isAdmin();
      }

      // === PERSONNEL ===
      match /personnel/{staffId} {
        allow read, list: if isUserInSchool(schoolId);
        allow write: if isSchoolDirector(schoolId) || isAdmin();
      }

      // === ELEVES ===
      match /eleves/{studentId} {
        allow read, list: if isUserInSchool(schoolId);
        allow write: if isSchoolDirector(schoolId) || isAdmin();

        // --- Notes de l'élève ---
        match /notes/{gradeId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isTeacher(schoolId) || isSchoolDirector(schoolId) || isAdmin();
        }
        
        // --- Paiements de l'élève ---
        match /paiements/{paymentId} {
          allow read, list: if isSchoolDirector(schoolId) || isAdmin(); // Only director/admin can see payment history
          allow write: if isSchoolDirector(schoolId) || isAdmin();
        }

        // --- Affectations de l'élève ---
        match /affectations/{assignmentId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId) || isAdmin();
        }
      }
      
      // === AUTRES SOUS-COLLECTIONS ===
      match /absences/{absenceId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isTeacher(schoolId) || isSchoolDirector(schoolId) || isAdmin();
      }

      match /comptabilite/{transactionId} {
          allow read, list, write: if isSchoolDirector(schoolId) || isAdmin();
      }

      match /bibliotheque/{bookId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isSchoolDirector(schoolId) || isTeacher(schoolId) || isAdmin();
      }

      match /messagerie/{messageId} {
          allow read, list: if isUserInSchool(schoolId);
          allow create: if isSchoolDirector(schoolId) || isTeacher(schoolId) || isAdmin();
          allow delete: if isAdmin();
      }
      
      match /matieres/{subjectId} {
          allow read, list: if isUserInSchool(schoolId);
          allow write: if isSchoolDirector(schoolId) || isAdmin();
      }
    }
  }
}
