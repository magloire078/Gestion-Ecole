
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }
    
    function isDirector(schoolId) {
        // Important: Do not use `get()` in collection list rules.
        // This is safe for single-document operations (get, create, update, delete).
        return isAuth() && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }

    function isMemberOfSchool(schoolId) {
      return isAuth() && request.auth.token.schoolId == schoolId;
    }
    
    function isCreatingSchoolAsDirector() {
        return isAuth() && request.resource.data.directorId == request.auth.uid;
    }

    // ========== GLOBAL RULES ==========
    match /system_settings/{settingId} {
        allow read: if isAuth();
        allow write: if isSuperAdmin();
    }
    match /super_admins/{adminId} {
        allow read, write: if isSuperAdmin();
    }
    // Any authenticated user can create a log, but only super admins or directors can read them all
    match /system_logs/{logId} {
      allow create: if isAuth();
      allow read: if isSuperAdmin() || isDirector(request.auth.token.schoolId);
    }

    // ========== ONBOARDING & USER ROOT ==========
    // A user can create/update their own root profile.
    // This is necessary for the school creation process to link the schoolId.
    match /utilisateurs/{userId} {
      allow read, write: if isUser(userId);
    }
    
    // ========== SCHOOL & SUBCOLLECTIONS RULES ==========
    match /ecoles/{schoolId} {
      // Who can create a school? An authenticated user creating it for themselves.
      allow create: if isCreatingSchoolAsDirector();
      
      // Who can read the main school document?
      // A super admin OR a member of the school.
      allow read: if isSuperAdmin() || isMemberOfSchool(schoolId);
      
      // Who can update the school?
      // A super admin OR the director of the school.
      allow update: if isSuperAdmin() || isDirector(schoolId);
      
      // Physical deletion is disabled (soft delete via status).
      allow delete: if false;

      // --- Staff Creation Rule ---
      // This rule is crucial for onboarding. A user can create their OWN staff profile
      // before their schoolId claim is set.
      match /personnel/{staffId} {
        allow create: if isUser(staffId);
        allow read, update, delete: if isMemberOfSchool(schoolId);
      }

      // --- GENERIC SUBCOLLECTION RULE ---
      // This rule applies to ALL other subcollections of a school.
      // A user can read/write data within their own school.
      match /{path=**}/documents/{docId} {
        allow read, write: if isMemberOfSchool(schoolId);
      }
    }
  }
}
