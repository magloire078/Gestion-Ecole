rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permettre un accès complet aux sous-collections des écoles pour les utilisateurs authentifiés
    match /ecoles/{schoolId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Règle générique pour les autres collections de premier niveau
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Permettre la création de contact_requests par n'importe qui
    match /contact_requests/{requestId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
    
    // Permettre la création de survey_responses par n'importe qui
    match /survey_responses/{responseId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
  }
}
