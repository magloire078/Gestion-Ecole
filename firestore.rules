rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isSchoolMember(schoolId) {
        // Un utilisateur est membre s'il a le claim ou s'il est le directeur enregistré dans la BD.
        return isAuth() && (
          request.auth.token.schoolId == schoolId ||
          get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid
        );
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }
    
    function isDirector(schoolId) {
        let schoolData = get(/databases/$(database)/documents/ecoles/$(schoolId)).data;
        return isAuth() && request.auth.uid == schoolData.directorId;
    }
    
    // ========== GLOBAL RULES ==========

    // Les Super Admins ont un accès total en lecture et écriture sur toute la base de données.
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }

    // ========== ONBOARDING & CREATION RULES ==========

    // Règle pour la création d'une école.
    match /ecoles/{schoolId} {
      // Un utilisateur ne peut créer une école que s'il se désigne comme directeur.
      allow create: if isAuth() && request.resource.data.directorId == request.auth.uid;
      
      // La lecture est permise aux membres de l'école (via claim) OU au directeur (via DB).
      // Cette double vérification est cruciale juste après la création, avant que le claim ne soit propagé.
      allow read: if isAuth() && isSchoolMember(schoolId);
      
      // Seul le directeur peut mettre à jour les informations de l'école.
      allow update: if isDirector(schoolId);
      
      // La suppression physique est interdite. On utilise un soft delete (champ 'status').
      allow delete: if false;
    }

    // Règle pour la création du profil du directeur lors de la création de l'école.
    match /ecoles/{schoolId}/personnel/{staffId} {
        // Permet la création du profil uniquement si :
        // 1. L'utilisateur crée son propre profil (staffId == uid).
        // 2. Le profil a le rôle 'directeur'.
        // Cela se produit dans le même batch que la création de l'école.
        allow create: if isAuth() && 
                      staffId == request.auth.uid && 
                      request.resource.data.role == 'directeur';
                      
        // Une fois membre, on peut lire les profils et modifier le sien.
        allow get, list: if isSchoolMember(schoolId);
        allow update: if isDirector(schoolId) || isUser(staffId);
        allow delete: if isDirector(schoolId);
    }
    
    // Règle pour le document racine de l'utilisateur.
    match /utilisateurs/{userId} {
      // Un utilisateur peut toujours lire son propre document racine.
      allow read: if isUser(userId);
      
      // La création est permise si elle n'existe pas.
      allow create: if isUser(userId);
      
      // La mise à jour est permise si l'utilisateur met à jour son propre document
      // (par exemple, pour changer d'école plus tard).
      allow update: if isUser(userId);
    }
    
    // ========== SYSTEM LOGS ==========
    
    // N'importe quel utilisateur authentifié peut écrire un log (ex: création d'école).
    // Seuls les admins peuvent les lire.
    match /system_logs/{logId} {
      allow create: if isAuth();
      allow read: if isDirector(request.auth.token.schoolId) || isSuperAdmin();
    }

    // ========== GENERAL SCHOOL DATA RULES ==========
    
    // Règle générique pour toutes les autres sous-collections d'une école.
    // L'accès est accordé à tous les membres authentifiés de l'école.
    match /ecoles/{schoolId}/{collection}/{document=**} {
      allow read, write: if isSchoolMember(schoolId);
    }
  }
}
