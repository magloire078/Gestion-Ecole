
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isSchoolMember(schoolId) {
        return isAuth() && request.auth.token.schoolId == schoolId;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }

    // ========== GLOBAL RULES ==========

    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }

    match /ecoles/{schoolId} {
      allow create, list, get: if isAuth();
      allow read, update, delete: if isSchoolMember(schoolId);
    }
    
    match /utilisateurs/{userId} {
      allow read: if isUser(userId);
      allow write: if isAuth() && request.resource.data.keys().hasOnly(['schoolId']);
    }

    match /system_logs/{logId} {
      allow create, read: if isAuth();
    }

    // ========== SCHOOL-SPECIFIC RULES ==========
    
    match /ecoles/{schoolId}/personnel/{staffId} {
      allow create: if isUser(staffId) && 
                      request.resource.data.role == 'directeur' &&
                      schoolId != "";

      allow get: if isUser(staffId);
                      
      allow list, update, delete: if isSchoolMember(schoolId);
    }
    
    // Generic rule for all other subcollections within a school.
    // Allows school members to manage their own school's data.
    match /ecoles/{schoolId}/{collection}/{docId=**} {
      allow get, list, write: if isSchoolMember(schoolId);
    }
  }
}
