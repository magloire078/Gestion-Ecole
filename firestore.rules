
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // In a real application, you would set this custom claim on the user's token
      return request.auth.token.admin == true;
    }

    function getUserSchoolId() {
      // Path to the user's document in the global /users collection
      let userDocPath = /databases/$(database)/documents/utilisateurs/$(request.auth.uid);
      
      // Check if the document exists before accessing data
      if (exists(userDocPath)) {
        return get(userDocPath).data.schoolId;
      }
      return null;
    }
    
    function isUserInSchool(schoolId) {
      // Ensures the user is authenticated and their schoolId matches the requested one
      return isAuth() && getUserSchoolId() == schoolId;
    }
    
    function getStaffRole(userId) {
      // Reads the user's role from the global personnel collection.
      // This is more reliable for checking permissions across the app.
      let staffDoc = get(/databases/$(database)/documents/personnel/$(userId));
      if (staffDoc.exists) {
        return staffDoc.data.role;
      }
      return null;
    }
    
    function isDirector() {
       return getStaffRole(request.auth.uid) == 'directeur';
    }

    function isTeacher() {
        return getStaffRole(request.auth.uid) == 'enseignant';
    }
    
    // --- Global Collections ---

    match /utilisateurs/{userId} {
      // A user can create/read/update their own user_root document.
      allow read, write: if isAuth() && request.auth.uid == userId;
      // An admin can read any user document for administrative purposes.
      allow read: if isAdmin();
    }

    match /admin_roles/{roleId} {
      // Only admins can manage administrative roles.
      allow read, write: if isAdmin();
    }
    
    match /personnel/{staffId} {
        // Allow read access if the user belongs to the same school as the staff member.
        allow read: if isUserInSchool(resource.data.schoolId);
        // Allow a user to create their own initial staff profile (e.g., director during onboarding).
        allow create: if isAuth() && request.auth.uid == staffId;
        // Allow a user to update their own profile, or allow a director to update any profile in their school.
        allow update: if (isAuth() && request.auth.uid == staffId) || isDirector();
        // Only a director can delete a staff member.
        allow delete: if isDirector();
    }
    
    match /classes/{classId} {
        allow read: if isUserInSchool(resource.data.schoolId);
        allow write: if isDirector(); // Only directors can create/update/delete classes
    }
    
    match /eleves/{studentId} {
        allow read: if isUserInSchool(resource.data.schoolId);
        allow write: if isDirector();
        
        match /notes/{gradeId} {
            allow read, write: if isUserInSchool(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId) && (isDirector() || isTeacher());
        }
        match /paiements/{paymentId} {
            allow read, write: if isUserInSchool(get(/databases/$(database)/documents/eleves/$(studentId)).data.schoolId) && isDirector();
        }
    }

    // --- Collections where anyone in the school can read, but only directors can write ---
    match /(cycles|frais_scolarite|absences|comptabilite|bibliotheque|emploi_du_temps|messagerie)/{docId} {
        allow read: if isUserInSchool(resource.data.schoolId);
        allow write: if isDirector();
    }

    // --- School Document ---
    match /ecoles/{schoolId} {
      // Anyone in the school or an admin can read the school's public details.
      allow read: if isUserInSchool(schoolId) || isAdmin();
      // Allow any authenticated user to create a school document.
      // The rules on sub-collections will secure the rest of the data.
      allow create: if isAuth();
      // Only the designated director of that school or an admin can update it.
      allow update: if (isAuth() && request.auth.uid == resource.data.directorId) || isAdmin();
      // Only admins can delete a school.
      allow delete: if isAdmin();
    }

    // Default deny all other paths for security
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
