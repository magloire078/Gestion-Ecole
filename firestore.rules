
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }
    
    function isCreatingSchoolAsDirector(schoolId) {
        return isAuth() && request.resource.data.directorId == request.auth.uid;
    }
    
    function isDirectorOfAnySchool() {
        return isAuth() && request.auth.token.isDirector == true;
    }

    function isMemberOfSchool(schoolId) {
      return isAuth() && request.auth.token.schoolId == schoolId;
    }

    // ========== GLOBAL RULES ==========
    match /system_settings/{settingId} {
        allow read: if isAuth();
        allow write: if isSuperAdmin();
    }
     match /super_admins/{adminId} {
        allow read, write: if isSuperAdmin();
    }
    match /system_logs/{logId} {
      allow create: if isAuth();
      allow read: if isDirectorOfAnySchool() || isSuperAdmin();
    }

    // ========== ONBOARDING & USER ROOT ==========
    match /utilisateurs/{userId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
    }
    
    // ========== SCHOOL & SUBCOLLECTIONS RULES ==========

    match /ecoles/{schoolId} {
      // Creation: only a new director can create their school.
      allow create: if isCreatingSchoolAsDirector(schoolId);
      
      // Reading: any authenticated member of the school can read the school doc.
      allow read: if isMemberOfSchool(schoolId) || isSuperAdmin();
      
      // Update: only the director or a super admin can update.
      allow update: if isDirector(schoolId) || isSuperAdmin();
      
      // Deletion: Not allowed directly. Status should be changed.
      allow delete: if false;

      // --- SUBCOLLECTIONS ---
      // This rule grants read/write access to all members of the school for all subcollections.
      // This is a broad rule, but secure as long as `isMemberOfSchool` is correct.
      match /{allPaths=**} {
        allow read, write: if isMemberOfSchool(schoolId) || isSuperAdmin();
      }
    }
  }
}
