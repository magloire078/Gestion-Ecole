
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getUserSchoolId(userId) {
      return get(/databases/$(database)/documents/utilisateurs/$(userId)).data.schoolId;
    }

    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function isCreatingOwnDocument(userId) {
      return request.auth.uid == userId;
    }

    function isSchoolDirector(schoolId) {
      return request.auth.uid == get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId;
    }

    // --- Root Collections ---

    match /utilisateurs/{userId} {
      allow create: if isUserAuthenticated() && isCreatingOwnDocument(userId) && !exists(/databases/$(database)/documents/utilisateurs/$(userId));
      allow get: if isUserAuthenticated() && isCreatingOwnDocument(userId);
      allow update, delete, list: if false;
    }
    
    match /ecoles/{schoolId} {
        allow create: if isUserAuthenticated() && request.resource.data.directorId == request.auth.uid;
        allow get: if isUserInSchool(schoolId);
        allow list: if isUserAuthenticated();
        
        // --- CORRECTION: Only the director can update the school document ---
        allow update: if isUserInSchool(schoolId) && isSchoolDirector(schoolId);
        
        allow delete: if false;

        // --- Subcollections within a School ---

        match /utilisateurs/{userId} {
            allow create: if isUserAuthenticated() && isCreatingOwnDocument(userId);
            allow read, list, update: if isUserInSchool(schoolId);
            allow delete: if false;
        }
        
        // --- CORRECTION: Only the director can write to these collections ---
        // Any user in the school can read.
        match /enseignants/{docId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isUserInSchool(schoolId) && isSchoolDirector(schoolId);
        }
        match /classes/{docId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isUserInSchool(schoolId) && isSchoolDirector(schoolId);
        }
        match /eleves/{docId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isUserInSchool(schoolId) && isSchoolDirector(schoolId);
        }

        // Generic rules for other subcollections.
        // Director can write, members can read.
        match /{otherCollections}/{docId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isUserInSchool(schoolId) && isSchoolDirector(schoolId);
        }
    }
  }
}
