rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // Platform-level admin, typically the school creator
      return request.auth.token.superAdmin == true;
    }
    
    function isDirector(schoolId) {
        // Check if the requesting user's UID is the directorId on the school document
        return isAuth() && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }

    function belongsToSchool(schoolId) {
        // Check if the user's custom claim matches the schoolId
        return isAuth() && request.auth.token.schoolId == schoolId;
    }

    // --- Global Collections ---
    match /utilisateurs/{userId} {
      allow read, update: if isAuth() && (request.auth.uid == userId || isSuperAdmin());
      allow create: if isAuth() && request.auth.uid == userId && !exists(path);
    }

    match /super_admins/{adminId} {
        allow read, write: if isSuperAdmin();
    }

    match /system_logs/{logId} {
        allow read, create: if isSuperAdmin();
        allow update, delete: if false;
    }
    
    match /system_settings/{settingId} {
        allow read, write: if isSuperAdmin();
    }


    // --- School-Specific Collections ---
    match /ecoles/{schoolId} {
      // The school director can ALWAYS read their own school document.
      // This is the most robust way to ensure the app can load school data.
      allow get: if isAuth() && (isSuperAdmin() || resource.data.directorId == request.auth.uid);
      allow list: if isSuperAdmin();
      allow create: if isAuth(); 
      allow update: if isSuperAdmin() || isDirector(schoolId);
      allow delete: if isSuperAdmin();
    }

    // Generic rule for all subcollections under a school
    // This is a simpler, more permissive rule to ensure basic functionality.
    match /ecoles/{schoolId}/{path=**} {
      allow read, write: if isSuperAdmin() || belongsToSchool(schoolId);
    }
  }
}
