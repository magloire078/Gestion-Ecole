
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    // Un utilisateur est membre s'il a le schoolId dans son token OU si son profil existe dans la sous-collection personnel.
    function isSchoolMember(schoolId) {
        return isAuth() && 
               (request.auth.token.schoolId == schoolId || 
                exists(/databases/$(database)/documents/ecoles/$(schoolId)/personnel/$(request.auth.uid)));
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }
    
    function getDirectorId(schoolId) {
        return get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId;
    }
    
    function isDirector(schoolId) {
      return isAuth() && request.auth.uid == getDirectorId(schoolId);
    }

    // ========== GLOBAL RULES ==========

    // Les super admins peuvent tout faire.
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }

    // N'importe quel utilisateur authentifié peut lister/créer une école
    match /ecoles/{schoolId} {
      allow create, list, get: if isAuth();
      // Seuls les membres de l'école peuvent la lire/modifier
      allow read, update, delete: if isSchoolMember(schoolId);
    }
    
    // Un utilisateur peut lire/écrire son propre document racine.
    match /utilisateurs/{userId} {
      allow read, write: if isUser(userId);
    }

    // ========== SCHOOL-SPECIFIC RULES ==========
    
    // Règle spéciale pour la création du profil du directeur lors de l'onboarding
    match /ecoles/{schoolId}/personnel/{staffId} {
      // Autorise la création du profil si l'UID correspond à celui qui crée (le futur directeur)
      allow create: if isUser(staffId) && request.resource.data.role == 'directeur';
      
      // Les membres de l'école peuvent accéder aux profils
      allow get, list, update, delete: if isSchoolMember(schoolId);
    }
    
    // Règle générique pour toutes les autres sous-collections d'une école.
    // Permet aux membres de l'école de lire/écrire les données de leur propre école.
    match /ecoles/{schoolId}/{collection}/{docId=**} {
      allow get, list, write: if isSchoolMember(schoolId);
    }
  }
}
