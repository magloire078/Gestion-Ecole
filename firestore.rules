rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Règle générale pour les collections racines (users, tickets, etc.)
    // Permet la lecture/écriture si l'utilisateur est authentifié.
    match /{document}/{id} {
      allow read, write: if request.auth != null;
    }
    
    // Règle spécifique pour l'école et TOUTES ses sous-collections
    // C'est la règle cruciale qui autorise l'opération 'list' sur messagerie, etc.
    match /ecoles/{schoolId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Règle pour permettre aux utilisateurs non authentifiés de soumettre
    // le formulaire de contact.
    match /contact_requests/{requestId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
    
    // Règle pour permettre aux utilisateurs non authentifiés de soumettre
    // le formulaire d'enquête.
     match /survey_responses/{responseId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
  }
}
