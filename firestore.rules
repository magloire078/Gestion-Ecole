
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== UTILITY FUNCTIONS ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() && request.auth.token.superAdmin == true;
    }
    
    function isUser(userId) {
        return isAuth() && request.auth.uid == userId;
    }
    
    function isDirector(schoolId) {
        // Vérifie si l'utilisateur est directeur selon la BD
        // Sécurisé car utilisé seulement pour des opérations sur un document spécifique
        return isAuth() && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }

    function isMemberOfSchool(schoolId) {
      // Membre via claims OU directeur selon BD (important pour onboarding)
      return isAuth() && (
        request.auth.token.schoolId == schoolId ||
        get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid
      );
    }
    
    function isCreatingSchoolAsDirector() {
        return isAuth() && request.resource.data.directorId == request.auth.uid;
    }
    
    // Fonction spéciale pour la création du profil personnel pendant l'onboarding
    function canCreateDirectorProfile(schoolId, staffId) {
        return isAuth() && 
               staffId == request.auth.uid && // L'utilisateur crée son propre document.
               request.resource.data.role == 'directeur' && // Le rôle doit être directeur
               request.resource.data.uid == request.auth.uid; // Le champ uid dans le doc correspond
    }

    // ========== GLOBAL RULES ==========
    match /system_settings/{settingId} {
        allow read: if isAuth();
        allow write: if isSuperAdmin();
    }
    
    match /super_admins/{adminId} {
        allow read, write: if isSuperAdmin();
    }
    
    match /system_logs/{logId} {
      allow create: if isAuth();
      allow read: if isSuperAdmin() || (isAuth() && request.auth.token.isDirector == true);
    }

    // ========== ONBOARDING & USER ROOT ==========
    match /utilisateurs/{userId} {
      // Un utilisateur peut lire et écrire son propre document racine.
      allow read, write: if isUser(userId);
    }
    
    // ========== SCHOOL & SUBCOLLECTIONS RULES ==========
    match /ecoles/{schoolId} {
      // Qui peut créer une école ?
      allow create: if isCreatingSchoolAsDirector();
      
      // Qui peut lire le document école ?
      allow read: if isSuperAdmin() || isMemberOfSchool(schoolId);
      
      // Qui peut mettre à jour l'école ?
      allow update: if isSuperAdmin() || isDirector(schoolId);
      
      // Pas de suppression physique
      allow delete: if false;

      // ========== RÈGLES SPÉCIFIQUES POUR L'ONBOARDING ==========
      
      // Règle EXCEPTIONNELLE pour la création du profil directeur
      match /personnel/{staffId} {
        // CRÉATION pendant onboarding : l'utilisateur crée son propre profil de directeur
        allow create: if canCreateDirectorProfile(schoolId, staffId);
        
        // Après création : règles normales
        allow read: if isSuperAdmin() || isMemberOfSchool(schoolId);
        allow update: if isSuperAdmin() || isDirector(schoolId) || isUser(staffId);
        allow delete: if isSuperAdmin() || isDirector(schoolId);
      }
      
      // ========== RÈGLE GÉNÉRIQUE POUR TOUTES LES AUTRES SOUS-COLLECTIONS ==========
      match /admin_roles/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /eleves/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /eleves/{studentId}/{subcollection}/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /cycles/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /niveaux/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /classes/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /emploi_du_temps/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /frais_scolarite/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /absences/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /comptabilite/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /bibliotheque/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /messagerie/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /matieres/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /cantine_menus/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /cantine_reservations/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /cantine_abonnements/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /transport_bus/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /transport_lignes/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /transport_abonnements/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /internat_batiments/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /internat_chambres/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /internat_occupants/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /internat_entrees_sorties/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /inventaire/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /cles_trousseaux/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /cles_log/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /salles/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /reservations_salles/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /maintenance/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /activites/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /inscriptions_activites/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /competitions/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
      match /participations_competitions/{docId} { allow read, write: if isMemberOfSchool(schoolId); }
    }
  }
}
