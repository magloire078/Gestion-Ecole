
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getUserSchoolId(userId) {
      return get(/databases/$(database)/documents/utilisateurs/$(userId)).data.schoolId;
    }
    
    function getUserRoleFromSchool(schoolId, userId) {
        return get(/databases/$(database)/documents/ecoles/$(schoolId)/utilisateurs/$(userId)).data.role;
    }
    
    function isUserAdmin(schoolId, userId) {
        return isUserInSchool(schoolId) && getUserRoleFromSchool(schoolId, userId) == 'admin';
    }

    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function isSchoolDirector(schoolId, userId) {
      return isUserInSchool(schoolId) && getUserRoleFromSchool(schoolId, userId) == 'directeur';
    }

    function isCreatingOwnDocument(userId) {
      return request.auth.uid == userId;
    }
    
    // --- Incoming Data Validation ---
    function isNotChangingRole(request, resource) {
        // A user cannot change their own role.
        return request.resource.data.role == resource.data.role;
    }


    // --- Root Collections ---

    match /utilisateurs/{userId} {
      allow create: if isUserAuthenticated() && isCreatingOwnDocument(userId) && !exists(/databases/$(database)/documents/utilisateurs/$(userId));
      allow get: if isUserAuthenticated() && (isCreatingOwnDocument(userId) || isUserAdmin(getUserSchoolId(request.auth.uid), request.auth.uid));
      allow list: if isUserAdmin(getUserSchoolId(request.auth.uid), request.auth.uid);
      allow update, delete: if isUserAdmin(getUserSchoolId(request.auth.uid), request.auth.uid);
    }
    
    match /ecoles/{schoolId} {
        allow create: if isUserAuthenticated() && request.resource.data.directorId == request.auth.uid;
        allow get: if isUserInSchool(schoolId);
        allow list: if isUserAuthenticated();
        // The school director or an admin can update the school's information.
        allow update: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        allow delete: if isUserAdmin(schoolId, request.auth.uid); // Only an admin can delete a school.
        
        // --- Collection Group Queries ---
        match /{path=**}/eleves/{studentId} {
            allow get, list: if isUserInSchool(schoolId);
        }

        // --- Subcollections with Specific Rules ---

        match /utilisateurs/{userId} {
            // A user can create their own profile in a school (onboarding)
            // A director or admin can create users.
            allow create: if isCreatingOwnDocument(userId) || isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
            
            // A director or admin can modify any profile.
            // A user can modify their own profile, but NOT their role.
            allow update: if (isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid)) || (isCreatingOwnDocument(userId) && isNotChangingRole(request, resource));

            // Reading user list is restricted to admins and directors for privacy.
            allow get, list: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);

            // Only a director or admin can remove a user from the school.
            allow delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }

        match /enseignants/{teacherId} {
            allow read, list: if isUserInSchool(schoolId);
            // Only directors and admins can manage teachers.
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }

        match /eleves/{studentId} {
            allow read, list: if isUserInSchool(schoolId);
            // Only directors and admins can create, update, or delete students.
            allow create, update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);

            match /notes/{gradeId} {
                // Any staff member of the school (teacher, admin, director) can read and write grades.
                allow read, write: if isUserInSchool(schoolId);
            }
            
            match /paiements/{paymentId} {
                // Only authorized staff (admin, director, accountant...) can create/read payments.
                allow read, list, create: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid) || getUserRoleFromSchool(schoolId, request.auth.uid) == 'personnel';
                allow update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
            }

            match /absences/{absenceId} {
                // Any authenticated user of the school can create an absence record.
                allow create: if isUserInSchool(schoolId);
                // All school members can read absence data.
                allow read, list: if isUserInSchool(schoolId);
                // Only directors and admins can modify or delete absence records.
                allow update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
            }
        }
        
        match /comptabilite/{transactionId} {
             // Only authorized staff (admin, director, accountant...) can manage accounting.
            allow read, list, create: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid) || getUserRoleFromSchool(schoolId, request.auth.uid) == 'personnel';
            allow update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }

        match /classes/{classId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }
        
        match /emploi_du_temps/{entryId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }

        match /personnel/{staffId} {
            allow read, list, create, update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }
        
        match /messagerie/{messageId} {
            allow read, list: if isUserInSchool(schoolId);
            allow create: if isUserInSchool(schoolId); // Any member of the school can send a message
            allow update, delete: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }

        // --- Generic Rules for other subcollections ---
        match /{otherCollections}/{docId} {
            allow read, list: if isUserInSchool(schoolId);
            allow write: if isSchoolDirector(schoolId, request.auth.uid) || isUserAdmin(schoolId, request.auth.uid);
        }
    }
  }
}
