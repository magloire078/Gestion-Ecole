rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // FONCTION DE BASE
    function isAuth() {
      return request.auth != null;
    }
    
    // === RÈGLES PERMETTANT L'ONBOARDING ===
    
    // 1. UTILISATEURS - totalement ouvert pendant onboarding
    match /utilisateurs/{userId} {
      allow create, read, update: if isAuth();
      allow delete: if false;
    }
    
    // 2. ÉCOLES - création ouverte
    match /ecoles/{schoolId} {
      // CRÉATION : n'importe quel utilisateur authentifié
      allow create: if isAuth();
      
      // LECTURE : tous les utilisateurs authentifiés peuvent lire
      allow read: if isAuth();
      
      // MISE À JOUR : tous les utilisateurs authentifiés (temporaire)
      allow update: if isAuth();
      
      // PAS DE SUPPRESSION
      allow delete: if false;
    }
    
    // 3. PERSONNEL - création ouverte pendant onboarding
    match /ecoles/{schoolId}/personnel/{staffId} {
      // CRÉATION : l'utilisateur peut créer son propre profil
      allow create: if isAuth() && staffId == request.auth.uid;
      
      // LECTURE/MISE À JOUR : ouvert pour testing
      allow read, update: if isAuth();
      allow delete: if false;
    }
    
    // 4. LOGS - totalement ouvert
    match /system_logs/{logId} {
      allow create, read: if isAuth();
    }
    
    // 5. TOUTES LES AUTRES COLLECTIONS - ouvertes temporairement
    match /{document=**} {
      allow read, write: if isAuth();
    }
  }
}
