rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== Fonctions Utilitaires ==========
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // Pour l'instant, vérifie un document. Plus tard, utilisera les custom claims.
      return isAuth() && exists(/databases/$(database)/documents/super_admins/$(request.auth.uid));
    }
    
    function getUserSchoolId() {
      // Tente de lire le schoolId depuis le token d'authentification.
      return request.auth.token.schoolId;
    }

    function isSchoolMember(schoolId) {
      // L'utilisateur est-il membre de l'école spécifiée ?
      return isAuth() && getUserSchoolId() == schoolId;
    }

    function isDirector(schoolId) {
      // L'utilisateur est-il le directeur de l'école ?
      return isSchoolMember(schoolId) && get(/databases/$(database)/documents/ecoles/$(schoolId)).data.directorId == request.auth.uid;
    }
    
    // Règle spécifique pour permettre au directeur de créer son propre profil PENDANT la création de l'école.
    function isCreatingOwnProfileAsDirector(schoolId, staffId) {
       return request.auth.uid == staffId && request.resource.data.directorId == request.auth.uid;
    }

    // ========== Règles Globales ==========

    // Les Super Admins ont un accès total à toutes les données.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // Chaque utilisateur peut gérer son propre document racine.
    match /utilisateurs/{userId} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }

    // Les journaux système peuvent être créés par n'importe quel utilisateur authentifié.
    match /system_logs/{logId} {
       allow create: if isAuth();
       allow read: if isAuth(); // Ou plus restrictif si nécessaire
    }
    
    // Les paramètres système sont lisibles par tous, mais modifiables uniquement par les Super Admins.
    match /system_settings/{settingId} {
       allow read: if isAuth();
       allow write: if isSuperAdmin();
    }

    // ========== Règles pour les Écoles ==========

    // N'importe quel utilisateur authentifié peut créer une école.
    match /ecoles/{schoolId} {
      allow create: if isAuth();
      // Seuls les membres de l'école peuvent la lire.
      allow read: if isSchoolMember(schoolId);
      // Seul le directeur peut la mettre à jour ou la supprimer.
      allow update, delete: if isDirector(schoolId);
    }
    
    // Règles pour la création du profil du directeur en même temps que l'école
    match /ecoles/{schoolId}/personnel/{staffId} {
       allow create: if isCreatingOwnProfileAsDirector(schoolId, staffId);
       // Pour les opérations futures, on applique les règles standard.
       allow read, update, delete: if isSchoolMember(schoolId);
    }

    // Règle générale pour toutes les autres sous-collections d'une école.
    // Un utilisateur doit être membre de l'école pour y accéder.
    match /ecoles/{schoolId}/{collection}/{docId} {
      allow read, write, delete: if isSchoolMember(schoolId);
    }
  }
}
