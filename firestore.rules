
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Custom claim set on the user's token, e.g. via a Cloud Function
      return request.auth.token.admin == true;
    }

    function getUserSchoolId(userId) {
      let userDocPath = /databases/$(database)/documents/utilisateurs/$(userId);
      if (exists(userDocPath)) {
        return get(userDocPath).data.schoolId;
      }
      return null;
    }
    
    function isUserInSchool(schoolId) {
      return isAuth() && getUserSchoolId(request.auth.uid) == schoolId;
    }
    
    function isSchoolDirector(schoolId) {
       // On read/update, check existing resource. On create, check incoming resource.
       let schoolDoc = get(/databases/$(database)/documents/ecoles/$(schoolId));
       return isAuth() && schoolDoc.data.directorId == request.auth.uid;
    }
    
    function getStaffRole(userId, schoolId) {
        // Path to staff document in the subcollection
        let staffDocPath = /databases/$(database)/documents/ecoles/$(schoolId)/personnel/$(userId);
        if (exists(staffDocPath)) {
            return get(staffDocPath).data.role;
        }
        return null;
    }

    function isTeacher(schoolId) {
        return getStaffRole(request.auth.uid, schoolId) == 'enseignant';
    }

    // --- Global Collections ---

    match /utilisateurs/{userId} {
      // A user can create/read/update their own user_root document.
      allow read, write: if isAuth() && request.auth.uid == userId;
      // An admin can read any user document for administrative purposes.
      allow read: if isAdmin();
    }

    match /admin_roles/{roleId} {
      // Only admins can manage administrative roles.
      allow read, write: if isAdmin();
    }
    
    // --- School-Specific Collections (Subcollections) ---

    match /ecoles/{schoolId} {
      // Anyone in the school or an admin can read the school's public details.
      allow read: if isUserInSchool(schoolId) || isAdmin();
      // Allow any authenticated user to create a school document.
      allow create: if isAuth();
      // Only the designated director of that school or an admin can update it.
      allow update: if isSchoolDirector(schoolId) || isAdmin();
      // Only admins can delete a school.
      allow delete: if isAdmin();
      
      // Match all subcollections within a school
      match /{subcollection}/{docId} {
        // Allow reads for any user belonging to that school.
        allow read: if isUserInSchool(schoolId);
        
        // Allow writes (create, update, delete) only for the school's director or a platform admin.
        // This is a broad rule. More specific rules can be added below for specific subcollections.
        allow write: if isSchoolDirector(schoolId) || isAdmin();
      }
      
      // Specific rule for student notes: teachers can also write.
      match /eleves/{studentId}/notes/{gradeId} {
         // Inherits read rule from parent.
         // Allow teachers of the school to write notes.
         allow write: if isTeacher(schoolId) || isSchoolDirector(schoolId) || isAdmin();
      }
    }
  }
}

    