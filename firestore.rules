rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getSchoolId() {
      // Allow reading custom claims from the token.
      // Make sure to set these custom claims when the user logs in.
      return request.auth.token.schoolId;
    }

    function isUserInSchool(schoolId) {
      return isUserAuthenticated() && getSchoolId() == schoolId;
    }
    
    // School-specific data
    match /schools/{schoolId} {
        // A user can only read/write data within their own school's document space.
        allow read, write: if isUserInSchool(schoolId);
        
        // Specifically for user profiles within a school
        match /users/{userId} {
            // A user can only read their own profile.
            allow get: if isUserAuthenticated() && request.auth.uid == userId;
            // Any authenticated user from the school can see a list of users.
            allow list: if isUserInSchool(schoolId);
            // A user can create their own profile.
            // Ensure the data being written has the user's uid.
            allow create: if isUserAuthenticated() && request.auth.uid == userId && request.resource.data.uid == userId;
            // A user can update their own profile.
            allow update: if isUserAuthenticated() && request.auth.uid == userId;
            // Users cannot delete profiles.
            allow delete: if false;
        }

        // Rules for teachers, classes, cycles, fees and students
        match /teachers/{teacherId} {
            allow read, create, update, delete: if isUserInSchool(schoolId);
        }
        match /classes/{classId} {
            allow read, create, update, delete: if isUserInSchool(schoolId);
        }
        match /cycles/{cycleId} {
            allow read, create, update, delete: if isUserInSchool(schoolId);
        }
        match /fees/{feeId} {
            allow read, create, update, delete: if isUserInSchool(schoolId);
        }
        match /students/{studentId} {
            allow read, create, update, delete: if isUserInSchool(schoolId);
        }
    }
  }
}
